<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<PreferenceCategory
    android:title="Theme change">

    <CheckBoxPreference
        android:title="Theme"
        android:key="OTHER"
        app:defaultValue="false"
        android:summaryOn="Other theme is activated"
        android:summaryOff="Classic theme is activated"/>

</PreferenceCategory>

    <PreferenceCategory
        android:title="Сurrency change">
        <ListPreference
            android:title="Сurrency"
            app:key="CURRENCY"
            android:defaultValue="hryvnia"
            android:entries="@array/items_name"
            android:entryValues="@array/items_value"/>

    </PreferenceCategory>


</PreferenceScreen>