<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:padding="6dp" />

        <TextView
            android:id="@+id/NameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/product_image"
            android:layout_toRightOf="@+id/product_image"
            android:text="Баклажан"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameProduct"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/product_image"
            android:layout_toRightOf="@id/product_image"
            android:gravity="center"
            android:text="Цена"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/value_title"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameProduct"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/product_image"
            android:layout_toRightOf="@id/product_image"
            android:text="Новая               Старая"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/valuenew"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/value_title"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/product_image"
            android:layout_toRightOf="@id/product_image"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/valueold"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/value_title"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/valuenew"
            android:layout_toRightOf="@id/valuenew"
            android:text="150"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/value_title"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@id/product_image"
            android:layout_toRightOf="@id/product_image"
            android:text="04.05.21 - 05.02.21"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>